<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_background_blue_matakuliah"
    android:padding="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp">

    <!-- Nama Dosen -->
    <TextView
        android:id="@+id/nama_dosen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dr. John Doe"
        android:textSize="18sp"
        android:fontFamily="@font/outfit_bold"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/chat_icon"
        app:layout_constraintHorizontal_bias="0" />

    <!-- Prodi -->
    <TextView
        android:id="@+id/prodi_dosen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Faculty of Computer science"
        android:textSize="14sp"
        android:fontFamily="@font/outfit_regular"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="@id/nama_dosen"
        app:layout_constraintTop_toBottomOf="@id/nama_dosen"
        app:layout_constraintEnd_toStartOf="@id/chat_icon"
        app:layout_constraintHorizontal_bias="0" />

    <!-- Chat Icon -->
    <ImageView
        android:id="@+id/chat_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="chat"
        android:src="@drawable/ic_chat"
        android:backgroundTint="@color/yellow"
        android:padding="8dp"
        android:background="@drawable/rounded_icon_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
