<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_utama"
    >

    <!-- UPDATE PROFILE -->
    <TextView
        android:id="@+id/updateprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="UPDATE PROFILE"
        android:textColor="@color/yellow4"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Garis Kuning -->
    <View
        android:id="@+id/yellow_line"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:background="#FFD358"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/updateprofile"
        app:layout_constraintWidth_percent="0.9" />

    <TextView
        android:id="@+id/textupdateprofileanda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="40dp"
        android:text="Update Profile Anda"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:fontFamily="@font/outfit_regular"
        app:layout_constraintTop_toBottomOf="@id/yellow_line"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editJenisKelamin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Jenis Kelamin"
        android:background="@drawable/inputnim_background"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:fontFamily="@font/outfit_regular"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/textupdateprofileanda"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <EditText
        android:id="@+id/editTanggalLahir"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Tanggal Lahir"
        android:background="@drawable/inputnim_background"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:fontFamily="@font/outfit_regular"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/editJenisKelamin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <EditText
        android:id="@+id/editTempatLahir"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Tempat Lahir"
        android:background="@drawable/inputnim_background"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:fontFamily="@font/outfit_regular"
        android:textSize="15dp"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/editTanggalLahir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <EditText
        android:id="@+id/editNomorTelepon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Nomor Telepon"
        android:background="@drawable/inputnim_background"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:fontFamily="@font/outfit_regular"
        android:textSize="15dp"
        android:inputType="phone"
        app:layout_constraintTop_toBottomOf="@id/editTempatLahir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Email"
        android:background="@drawable/inputnim_background"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:fontFamily="@font/outfit_regular"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/editNomorTelepon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_background_blue"
        android:text="SIMPAN"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:fontFamily="@font/outfit_bold"
        app:layout_constraintTop_toBottomOf="@id/editEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:id="@+id/text_sudah_memiliki_akun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Perhatikan bahwa data yang Anda masukkan akan digunakan untuk keperluan akademik."
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textAlignment="center"
        android:fontFamily="@font/outfit_regular"
        app:layout_constraintTop_toBottomOf="@id/buttonSave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
